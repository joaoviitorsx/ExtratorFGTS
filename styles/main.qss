    color: white;
    font-family: Segoe UI;
    font-size: 14px;
}
QListWidget#sidebarMenu {
    background-color: #202020;
    border: none;
    padding: 10px;
}
        
QListWidget#sidebarMenu::item {
    padding: 10px;
    margin: 4px 0;
    border-radius: 6px;
}

QListWidget#sidebarMenu::item:selected {
    background-color: #E53935;
}

QListWidget#sidebarMenu::item:hover {
