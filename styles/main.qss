/* Estilo para o card do login */
QFrame#cardContainer {
    background-color: rgba(180, 25, 25, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    padding: 24px;
}

/* Campos de entrada (usuário/senha) */
QLineEdit#campoInput {
    background-color: #202020;
    border: 1px solid #3A3A3A;
    border-radius: 8px;
    padding: 10px;
    color: white;
    font-size: 14px;
}
QLineEdit#campoInput:focus {
    border: 1px solid #D32F2F;
}

QPushButton#botaoPrincipal {
    background-color: #E53935;
    color: white;
    border-radius: 8px;
    padding: 12px;
    font-weight: bold;
    font-size: 14px;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

QPushButton#botaoPrincipal:hover {
    background-color: #B71C1C;
}

QPushButton#botaoPrincipal:pressed {
    background-color: #9A0007;
}

QPushButton#botaoPrincipal:disabled {
    background-color: #444444;
    color: #CCCCCC;
}

#botaoSecundario {
    background-color: #2a2a2a;
    color: #ffffff;
    border-radius: 6px;
    padding: 8px 14px;
    font-weight: 500;
    border: 1px solid #444;
}
#botaoSecundario:hover {
    background-color: #3a3a3a;
}


/* Título */
QLabel#titulo {
    font-size: 20px;
    font-weight: 600;
    color: #FFFFFF;
}

/* Descrição */
QLabel#descricao {
    font-size: 13px;
